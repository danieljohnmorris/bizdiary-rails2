<h2>Accept invitation to The Business Diary</h2>

<% form_for resource_name, resource, :url => invitation_path(resource_name), :html => {:method => :put} do |f| -%>
  <%= f.error_messages %>
  <%= f.hidden_field :invitation_token %>

  <p><%= f.label :name, "Organisation Name" %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :url, "Website URL" %></p>
  <p><%= f.text_field :url %></p>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Create account" %></p>
<% end -%>

<%= render :partial => "shared/devise_links" %>