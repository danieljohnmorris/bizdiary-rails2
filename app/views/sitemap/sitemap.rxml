xml.instruct!
xml.urlset "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
  xml.url do
    xml.loc url_for(:controller => 'home', 
                    :action     => 'index',
                    :only_path  => false)
    xml.lastmod Time.now.to_date
  end
  @events.each do |event|
    xml.url do
      xml.loc url_for(:controller   => 'events', 
                      :action       => 'show', 
                      :id           => event.id,
                      :only_path    => false)
      xml.lastmod event.updated_at.to_date
    end
  end
  @organisations.each do |org|
    xml.url do
      xml.loc url_for(:controller   => 'organisations', 
                      :action       => 'show', 
                      :id           => org.id,
                      :only_path    => false)
      xml.lastmod org.updated_at.to_date
    end
  end
  @organisations.each do |org|
    xml.url do
      xml.loc url_for(:controller   => 'organisations', 
                      :action       => 'show', 
                      :id           => org.id,
                      :only_path    => false)
      xml.lastmod org.updated_at.to_date
    end
  end
end
